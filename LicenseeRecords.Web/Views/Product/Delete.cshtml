@using LicenseeRecords.WebAPI.Models;
@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Delete Product</h1>

        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
                <span class="govuk-warning-text__assistive">Warning</span>
                Are you sure you want to delete this product?
            </strong>
        </div>

        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Product Name</dt>
                <dd class="govuk-summary-list__value">@Model.ProductName</dd>
            </div>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button">
                Delete Product
            </button>
            <a href="@Url.Action("Index", "Home")" class="govuk-button govuk-button--secondary">
                Cancel
            </a>
        </form>
    </div>
</div>
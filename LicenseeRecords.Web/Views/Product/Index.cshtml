@using LicenseeRecords.WebAPI.Models;
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Products</h1>

        <a href="@Url.Action("Create", "Product")" class="govuk-button" data-module="govuk-button">
            Create New Product
        </a>

        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Product</th>
                    <th scope="col" class="govuk-table__header">Actions</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                @foreach (var product in Model)
                {
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">@product.ProductName</td>                      
                        <td class="govuk-table__cell">
                            <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })"
                               class="govuk-link govuk-link--no-visited-state govuk-!-margin-left-2">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>